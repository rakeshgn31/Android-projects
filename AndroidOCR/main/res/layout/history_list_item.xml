<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="2dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_ocr_item_preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/str_thumbnail_img_desc" />

    <TextView
        android:id="@+id/tv_processed_text_preview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_arrow"
        android:contentDescription="@string/str_arrow_desc" />

</LinearLayout>
